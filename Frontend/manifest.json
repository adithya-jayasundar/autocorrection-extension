{
  "manifest_version": 3,
  "name": "AutoCorrection",
  "version": "1.0",
  "description": "Correct your grammar with AI",
  "permissions": [
    "clipboardWrite",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.ngrok-free.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
